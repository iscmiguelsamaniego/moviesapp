<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            card_view:cardElevation="@dimen/gen_dimen_2"
            card_view:cardCornerRadius="@dimen/gen_dimen_6"
            android:layout_margin="@dimen/gen_dimen_16"
            app:cardBackgroundColor="@color/blue_ligth"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_margin="@dimen/gen_dimen_8"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/fr_user_image"
                    android:layout_width="@dimen/gen_dimen_60"
                    android:layout_height="@dimen/gen_dimen_60"
                    android:contentDescription="@string/user_image"
                    android:src="@drawable/ic_user"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/fr_user_info_tview"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/fr_user_info_tview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="Neque porro quisquam est qui dolorem ipsum quia dolor sit amet, consectetur, adipisci velit..."
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/fr_user_image"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/fr_user_swipe_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/fr_user_progress_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/gen_dimen_8"
                    android:text="Descargando datos ..."
                    android:textStyle="bold"
                    android:visibility="gone" />

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/fr_user_progress"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fr_user_progress_title"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:indeterminate="true"
                    android:visibility="gone"
                    app:indicatorColor="@color/blue_dark"
                    app:trackColor="@color/blue_medium" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/fr_user_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fr_user_progress"
                    android:layout_centerInParent="true"
                    android:padding="16dp" />

                <!--
                TODO
                tools:listitem="@layout/_item"
                CHAGUE BY CONSTRAIN
                -->

            </RelativeLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

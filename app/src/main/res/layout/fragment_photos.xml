<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/fragment_add_loadphoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/fragment_add_separator"
                    android:background="@color/blue_dark"
                    android:contentDescription="@string/load_image"
                    android:padding="@dimen/gen_dimen_6"
                    android:src="@drawable/ic_action_add_from_gallery" />

                <View
                    android:id="@+id/fragment_add_separator"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/gen_dimen_4" />

                <ImageButton
                    android:id="@+id/fragment_add_takephoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/fragment_add_separator"
                    android:background="@color/blue"
                    android:contentDescription="@string/Take_photo"
                    android:padding="@dimen/gen_dimen_6"
                    android:src="@drawable/ic_action_take_photo" />

                <ImageView
                    android:id="@+id/fragment_add_imagetaken"
                    android:layout_width="match_parent"
                    android:layout_height="194dp"
                    android:layout_below="@id/fragment_add_loadphoto"
                    android:layout_marginTop="@dimen/gen_dimen_6"
                    tools:background="@drawable/backdropsample"
                    android:contentDescription="@string/taken_photo"
                    android:scaleType="fitXY" />

            </RelativeLayout>

        </ScrollView>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>